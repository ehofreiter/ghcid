{
    "name": "haskell-ghcid",
    "displayName": "haskell-ghcid",
    "description": "Integrate ghcid into VS Code",
    "version": "0.3.2",
    "publisher": "ndmitchell",
    "homepage": "https://github.com/ndmitchell/ghcid",
    "author": "Neil Mitchell, Chris Wendt",
    "engines": {
        "vscode": "^1.74.0"
    },
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "git://github.com/ndmitchell/ghcid.git"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "//": [
        "Activate unconditionally on startup to register file watchers.",
        "See https://github.com/ndmitchell/ghcid/pull/317"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.ghcid.start",
                "title": "Start Ghcid for given workspace folder"
            },
            {
                "command": "extension.ghcid.stop",
                "title": "Stop Ghcid terminal and clear problems for given workspace folder"
            },
            {
                "command": "extension.ghcid.stopAll",
                "title": "Stop all Ghcid terminals and clear problems"
            }
        ],
        "configuration": {
            "title": "Ghcid configuration",
            "properties": {
                "ghcid.command": {
                    "type": "string",
                    "default": "ghcid",
                    "description": "Ghcid command"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^16.18.34",
        "@types/vscode": "^1.73.0",
        "@vscode/vsce": "^2.30.0",
        "mocha": "^10.3.0",
        "typescript": "^5.4.2"
    }
}
